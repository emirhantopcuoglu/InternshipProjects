<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0057D9"/> <!-- Basıldığında mavi -->
            <corners android:radius="8dp"/> <!-- Yuvarlatılmış köşeler -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4A90E2"/> <!-- Normal durumda açık mavi -->
            <corners android:radius="8dp"/> <!-- Yuvarlatılmış köşeler -->
        </shape>
    </item>
</selector>
